<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:frisson="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.srikanthbandi.livewallpaper.activities.MainActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_margin="@dimen/_10dp"
       android:background="@color/transparent"
      >
      <com.example.srikanthbandi.livewallpaper.frission.FrissonView
          android:id="@+id/wave_head"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_alignParentLeft="true"
          android:layout_alignParentStart="true"
          android:layout_alignParentTop="true"
          android:layout_marginBottom="120dp"
          frisson:alphaValue="40"
          frisson:tintColor="#000000"
          frisson:gradientType="linear"
          frisson:gradient_endColor="#000000"
          frisson:gradient_startColor="#000000"
          frisson:gradientAngle="180"
          frisson:tideCount="3"
          frisson:tideHeight="80dp" />
   </RelativeLayout>
<Button
    android:id="@+id/mBtnWallPaper"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50dp"
    android:gravity="center"
    android:textColor="@color/white"
    android:layout_margin="@dimen/_60dp"
    android:layout_centerInParent="true"
    android:background="@drawable/boder_et_select"
    android:text="@string/setwallpaper"/>
</RelativeLayout>
