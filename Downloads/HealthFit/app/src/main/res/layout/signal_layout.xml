<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:layout_marginBottom="@dimen/_10dp"
    android:gravity="bottom"
    android:visibility="visible"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/mLlyone"
        android:layout_width="@dimen/_5dp"
        android:layout_height="@dimen/_5dp"
        android:background="@color/primary_blue"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/mLlytwo"
        android:layout_width="@dimen/_4dp"
        android:layout_marginStart="@dimen/_1dp"
        android:layout_height="@dimen/_10dp"
        android:background="@color/primary_blue"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/mLlythree"
        android:layout_width="@dimen/_4dp"
        android:layout_marginStart="@dimen/_1dp"
        android:layout_height="@dimen/_15dp"
        android:background="@color/primary_blue"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/mLlyfour"
        android:layout_width="@dimen/_4dp"
        android:layout_marginStart="@dimen/_1dp"
        android:layout_height="@dimen/_20dp"
        android:background="@color/primary_blue"
        android:orientation="vertical" />

    <LinearLayout
        android:id="@+id/mLlyfive"
        android:layout_width="@dimen/_4dp"
        android:layout_marginStart="@dimen/_1dp"
        android:layout_height="@dimen/_25dp"
        android:background="@color/primary_blue"
        android:orientation="vertical" />
</LinearLayout>